<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nickjm6.pokeapp.MainActivity">


    <AutoCompleteTextView
        android:id="@+id/pokemon"
        android:hint="Enter Pokemon name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionSend"
        android:singleLine="true"
        android:ems="10" />
    <Spinner
        android:id="@+id/generation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pokemon">
    </Spinner>

    <TextView
        android:id="@+id/pokemonResponse"
        android:layout_below="@+id/generation"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>